<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.modulePa.controller.SelectEmployeePromotion" xmlns="sap.m"
	xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Page showHeader="true" title="Select Employee" showFooter="true" showNavButton="true">
		<content>
			<form:Form width="100%" editable="true" visible="true">
				<form:title>
					<core:Title text="Select Employee" level="Auto" icon="sap-icon://employee"/>
				</form:title>
				<form:formContainers>
					<form:FormContainer visible="true">
						<form:formElements>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Employee ID" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input placeholder="Select Employee ID" id="idEmployee" type="Text" showValueHelp="true" valueHelpRequest="handleValueHelpSelectEmployee" enabled="true" visible="true" width="auto" valueHelpOnly="false"
										required="false" valueStateText="Invalid entry" maxLength="0"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Button text="Continue" type="Default" icon="sap-icon://feeder-arrow" iconFirst="false" width="30%" enabled="true" visible="true"
										iconDensityAware="false" press="_onButtonPress"/>
								</form:fields>
							</form:FormElement>
						</form:formElements>
						<form:title/>
					</form:FormContainer>
				</form:formContainers>
				<form:layout>
					<form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
				</form:layout>
			</form:Form>
		</content>
		<footer/>
		<headerContent/>
		<subHeader/>
		<customHeader/>
	</Page>
</mvc:View>